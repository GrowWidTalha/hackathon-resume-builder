{
  "compilerOptions": {
    "target": "ES6", // or "ES2015"
    "module": "commonjs",
    "lib": ["dom", "ES2015"], // Ensure ES2015 is included
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}