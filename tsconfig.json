{
    "compilerOptions": {
      "target": "es5",                        // Compile to ES5 for broader browser support
      "module": "commonjs",                   // Use CommonJS module system
      "outDir": "./dist/js",                  // Output directory for compiled JS
      "rootDir": "./src/ts",                  // Directory for TypeScript files
      "strict": true,                         // Enable strict type-checking options
      "esModuleInterop": true,                // Enables emit interoperability between CommonJS and ES Modules
    },
    "include": ["src/ts/**/*"],               // Include all TS files in src/ts folder
    "exclude": ["node_modules"]               // Exclude node_modules
  }
